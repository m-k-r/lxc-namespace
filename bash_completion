_lxc-namespace() {
	local cur prev list
	COMPREPLY=()
	cur="${COMP_WORDS[COMP_CWORD]}"
	prev="${COMP_WORDS[COMP_CWORD-1]}"

	case "${prev}" in
		-c)	list=$(ls /var/lib/lxc/)
			;;
		-m)	list="change check"
			;;
		*)	list="-c -m -n -p -v -h"
			;;
	esac

	COMPREPLY=( $(compgen -W "${list}" -- ${cur}) )
	return 0
}
complete -F _lxc-namespace lxc-namespace
